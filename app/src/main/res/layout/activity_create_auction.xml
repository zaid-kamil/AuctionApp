<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".CreateAuctionActivity"
    android:orientation="vertical"
    android:background="#0f3b52">

    <ProgressBar
        android:id="@+id/progbr"
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:visibility="gone" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload Picture"
        android:textColor="#fff"
        android:textSize="28sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="25sp"
        style="@style/TextAppearance.AppCompat.Caption"/>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:src="@drawable/galleryimg"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="100dp"
        android:id="@+id/imgattach"/>

    <EditText
        android:layout_width="350dp"
        android:layout_height="42dp"
        android:background="@drawable/edit_round"
        android:layout_marginTop="220dp"
        android:layout_centerHorizontal="true"
        android:hint="Title"
        android:paddingLeft="10dp"
        android:id="@+id/ettitle"/>

    <EditText
        android:layout_width="350dp"
        android:layout_height="42dp"
        android:layout_below="@+id/ettitle"
        android:background="@drawable/edit_round"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:hint="Discription"
        android:inputType="textMultiLine"
        android:id="@+id/etdis"
        android:paddingLeft="10dp"/>

    <EditText
        android:layout_width="350dp"
        android:layout_height="42dp"
        android:layout_below="@+id/etdis"
        android:layout_marginTop="20dp"
        android:id="@+id/etminbid"
        android:background="@drawable/edit_round"
        android:layout_centerHorizontal="true"
        android:hint="Minimum Bid"
        android:inputType="numberDecimal"
        android:paddingLeft="10dp"/>

    <EditText
        android:layout_width="350dp"
        android:layout_height="42dp"
        android:background="@drawable/edit_round"
        android:layout_below="@id/etminbid"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:hint="Duration"

        android:id="@+id/etduration"
        android:paddingLeft="10dp"/>

    <Button
        android:layout_width="350dp"
        android:layout_height="42dp"
        android:background="@drawable/loginbtn"
        android:layout_below="@id/etduration"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:text="Create.."
        android:textAllCaps="false"
        android:textSize="25sp"
        android:id="@+id/btncreate"/>


</RelativeLayout>